<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create-table-user" author="VaskovskyAS">
        <createTable tableName="user">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="email" type="varchar">
                <constraints unique="true"/>
            </column>
            <column name="password" type="varchar"/>
            <column name="first_name" type="varchar"/>
            <column name="last_name" type="varchar"/>
            <column name="phone_number" type="varchar"/>
        </createTable>
        <createTable tableName="role">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar"/>
        </createTable>
        <createTable tableName="user_roles">
            <column name="user_id" type="bigint">
                <constraints nullable="false" primaryKey="true" foreignKeyName="user_roles_user_id_user_id" references="user(id)"/>
            </column>
            <column name="role_id" type="bigint">
                <constraints nullable="false" primaryKey="true" foreignKeyName="user_roles_role_id_role_id" references="role(id)" />
            </column>
        </createTable>
    </changeSet>
    <include file="db/changelog/v.1.0.0/main.xml"/>
    <include file="db/changelog/v.1.0.1/main.xml"/>
    <include file="db/changelog/v.1.0.2/main.xml"/>

</databaseChangeLog>